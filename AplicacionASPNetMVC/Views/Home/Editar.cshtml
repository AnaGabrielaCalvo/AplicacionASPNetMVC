@model AplicacionASPNetMVC.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1 class="text-center">Aplicación .Net 6 MVC</h1>


<div class="row">
    <div class="col-sm-12">
         <div class="card-border">
                <div class="card-header">
                      <h3 class="text-center">Editar Usuario</h3>
                 </div>
                 <div class="card-body">
                <form asp-controller="Home" asp-action="Editar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*enviar el id del campo como oculto*@
                    <input type="hidden" form="Id"/>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="from-control"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="from-control"/>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="from-control"/>
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>

                     <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="from-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div> 
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Editar usuario</button>
                    </div> 
                    </form>
                </div>
         </div>
    </div>

</div>
<div>
    <a asp-action="Index">volver a la lista</a>
</div>
