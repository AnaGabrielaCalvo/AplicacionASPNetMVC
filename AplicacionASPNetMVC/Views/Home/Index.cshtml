@model IEnumerable<AplicacionASPNetMVC.Models.Usuario>

@{
    ViewData["Title"] = "Lista de registro";
}

<h1 class="text-center">Aplicación .Net 6 MVC</h1>

@if (TempData["Mensaje"]==null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
      @TempData["Mensaje"]
       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
<div class="row">
    <div class="col-sm-12">
         <div class="float-right">
             <a asp-action="Crear" asp-controller="Home" class="btn btn-success">Nuevo Usuario</a>
         </div>
    </div>

</div>
<div class="row">
    <div class="col-sm-12">
         <div class="card-border">
             <div class="card-header">
                <h3 class="text-center">Lista de usuario</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(a => a.Nombre)</th>
                                    <th>@Html.DisplayNameFor(a => a.Telefono)</th>
                                    <th>@Html.DisplayNameFor(a => a.Celular)</th>
                                    <th> @Html.DisplayNameFor(a => a.Email)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(a => item.Nombre)</td>                                   
                                        <td>@Html.DisplayFor(a => item.Telefono)</td>                                    
                                        <td>@Html.DisplayFor(a => item.Celular)</td>                                   
                                        <td>@Html.DisplayFor(a => item.Email)</td>
                                   
                                        <td>
                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                                        </td>    
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
         </div>
    </div>

</div>